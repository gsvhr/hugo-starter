{
  "plugins": ["prettier-plugin-go-template", "prettier-plugin-tailwindcss"],
  "goTemplateBracketSpacing": true,
  "tailwindStylesheet": "./assets/css/main.css",
  "htmlWhitespaceSensitivity": "css",
  "printWidth": 180,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "semi": true,
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "go-template"
      }
    }
  ]
}
